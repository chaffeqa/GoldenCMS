<section id="adminBar">
  <div class="container">

    <%= link_to image_tag('inventure-logo.png', :alt => 'Inventure'), 'http://www.inventure.com' %>
    <%= link_to current_administrator.try(:email) , edit_administrator_registration_path(), :class => 'current-administrator' if administrator_signed_in? %>
    <% if @requested_site %>
    <ul class="btn large clearfix" id="admin-menu">
      <li>Content management
        <ul>
          <li class="expandable"><a href='javascript:void(0);'>Manage... </a>

            <ul class="btn medium clearfix">
              <li><%= link_to 'Pages', admin_pages_path %></li>
              <li><%= link_to 'Menus', admin_menus_path %></li>
              <li><%= link_to 'Categories', admin_categories_path %></li>
              <li><%= link_to 'Items', admin_items_path %></li>
              <li><%= link_to 'Client Messages', admin_questions_path %></li>
              <li><%= link_to 'Blogs', admin_blogs_path %></li>
              <li><%= link_to 'Calendars', admin_calendars_path %></li>
            </ul>
          </li>

          <li class="expandable"><a href='javascript:void(0)'>Create... </a>
            <ul class="btn medium clearfix">
              <li><%= link_to 'New Page', new_admin_page_path %></li>
              <li><%= link_to 'New Category', new_admin_category_path %></li>
              <li><%= link_to 'New Item', new_admin_item_path %></li>
              <li><%= link_to 'New Blog', new_admin_blog_path %></li>
              <li><%= link_to 'New Calendar', new_admin_calendar_path %></li>
            </ul>
          </li>

        </ul>
      </li>
    </ul>
    <% end %>
    <%= link_to "Log Out", destroy_administrator_session_path, :class => 'btn large' if administrator_signed_in? %>
    <%= yield :page_admin_bar %>

  </div>
</section>

