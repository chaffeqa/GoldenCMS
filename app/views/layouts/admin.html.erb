<!-- All Admin pages -->
<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
  <head>
    <%= render 'layouts/partials/head' %>
    <%= yield(:head) %>
  </head>

  <body id="<%= content_for?(:body_id) ? yield(:body_id) : 'adminPage' %>"
	class="<%= content_for?(:body_class) ? yield(:body_class) : 'oneColumn' %>">
    <% if admin? %><%= render 'layouts/partials/admin_bar' %><% end %>
    <div id="body">
      <div id="bodyFade">
        <div id="pageContainer">
          <%= render 'layouts/partials/header' %>
          <div id="content" class="clearfix">
            <article id="mainColumn" class="clearfix contents">
              <div id="top"></div>
              <div id="inner">
                <%= yield %>
              </div>
            </article>
          </div>
          <%= render 'layouts/partials/footer' %>
          <%= yield(:footer) %>
          <%= render 'layouts/partials/foot' %>
        </div>
      </div>
    </div>
  </body>
</html>

