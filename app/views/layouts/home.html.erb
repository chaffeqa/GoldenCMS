<!-- "/home" url and all dynamic_pages with the template_type = 'Home' -->
<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
  <head>
    <%= render 'layouts/partials/head' %>
    <%= yield(:head) %>
  </head>

  <body id="<%= content_for?(:body_id) ? yield(:body_id) : 'homePage' %>"
	class="<%= content_for?(:body_class) ? yield(:body_class) : 'twoColumn' %>">
    <% if admin? %><%= render 'layouts/partials/admin_bar' %><% end %>
    <%= render 'layouts/partials/flash' %>
    <div id="body">
      <div id="bodyFade">
        <div id="pageContainer">
          <%= render 'layouts/partials/header' %>
          <div id="content" class="clearfix">

            <article id="featuredBanner" class="contents">
              <div id="top"></div>
              <div id="inner">
                <%= yield(:element_area_0) %>
              </div>
            </article>

            <div id="featuredArea" class="clearfix contents">
              <article id="featuredLeft">
                <div id="top"></div>
                <div id="inner">
                  <%= yield(:element_area_1) %>
                </div>
              </article>
              <article id="featuredRight">
                <div id="top"></div>
                <div id="inner">
                  <%= yield(:element_area_2) %>
                </div>
              </article>
            </div>

            <article id="subColumn" class="contents">
              <div id="top"></div>
              <div id="inner">
                <%= yield(:element_area_3) %>
              </div>
            </article>

            <article id="mainColumn" class="contents">
              <div id="top"></div>
              <div id="inner">
                <%= yield(:element_area_4) %>
              </div>
            </article>

          </div>
          <%= render 'layouts/partials/footer' %>
          <%= yield(:footer) %>
          <%= render 'layouts/partials/foot' %>
        </div>
      </div>
    </div>
  </body>
</html>

