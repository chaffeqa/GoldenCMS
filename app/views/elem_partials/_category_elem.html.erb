<% if admin? %>
  <span class="controls">
    <%= link_to 'Edit Category', edit_admin_category_path(elem.item), :class => 'btn small' %>
    <%= link_to 'Settings', edit_admin_category_elem_path(elem), :class => 'btn small' %>
    <%= link_to image_tag("delete.png", :alt => 'X'), admin_category_elem_path(elem) , :confirm => "Are you sure?", :method => :delete, :class => 'control' %>
    <%= render :partial => 'elements/element_controls', :locals => {:element => elem.element} %>
  </span>
<% end %>

<% category = elem.category %>


<% if elem.element.display_title %><h1 class="title  <%= elem.element.html_id %> "><%= elem.element.title %></h1><% end %>
<p class="category-desc"><%= category ? category.description : 'Below are all the sub-categories and items.' %></p>

<% unless category.items.empty? %>
  <%= render :partial => 'elem_partials/item_list_elem_partials/thumbnail_list', :locals => {:items => category.item_categories} %>
  <%= render :partial => 'shared/pagination', :locals => {:resource => category.items, :element_id => elem.element.html_id } %>
<% end %>

<% unless category.sub_categories.empty? %>
    <%= render :partial => 'elem_partials/category_list_elem_partials/thumbnail_list', :locals => {:categories => category.sub_categories} %>
<% end %>




