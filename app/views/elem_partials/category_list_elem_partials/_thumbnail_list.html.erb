<ul class="categoryList">
  <% categories.each do |cat|%>
  <% if cat.node %>
    <%= content_tag_for :li, cat do %>
      <div class="thumbnail"> <%= link_to image_tag(cat.thumbnail_image ? cat.thumbnail_image : "no_image_thumb.gif"), shortcut_path(cat.node.shortcut) %> </div>
      <p class="title"><%= link_to cat.title, shortcut_path(cat.node.shortcut) %></p>
    <% end %>
  <% end %>
  <% end %>
</ul>

