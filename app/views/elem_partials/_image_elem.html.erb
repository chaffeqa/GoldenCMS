<% if admin? %>
  <span class="controls">
    <%= link_to 'Edit', edit_admin_image_elem_path(elem), :class => 'btn small' %>
    <%= link_to image_tag("delete.png", :alt => 'X'), admin_image_elem_path(elem), :confirm => "Are you sure you wish to delete this element?", :method => :delete, :class => 'control' %>
    <%= render :partial => 'elements/element_controls', :locals => {:element => elem.element} %>
  </span>
<% end %>

<% if elem.element.display_title %><h1 class="title  <%= elem.element.html_id %> "><%= elem.element.title %></h1><% end %>

<%= image_tag(elem.image.url, :alt => elem.element.title, :style => elem.image_style) %>

