<%# Renders a page_area_elements partial for each position in the page %>
<% @node.positions.times do |page_area| %>
  <%= content_for(('position_' + page_area.to_s).to_sym) do %>
    <%= render :partial => 'elements/page_area_elements', :locals => {:page_area => page_area} %>
  <% end %>
<% end %>


<%# Inserts Dynamic Page controls in the admin bar %>
<% content_for :page_admin_bar do %>
  <%= link_to('Preview Page', 'javascript:void(0)', :class => 'btn yellow large', :id => 'preview') %>
  <%= link_to('Fresh Page', shortcut_path(@node.shortcut, :fresh => true), :class => 'btn large') %>
  <%= link_to('Page Settings',  edit_admin_node_path(@node), :class => 'btn large') %>
<% end %>

