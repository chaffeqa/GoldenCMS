<%= form_tag(admin_items_path, :method => :get) do %>
  <tr class="inputRow">

    <%= hidden_field_tag(:per_page, @per_page) %>
    <%= hidden_field_tag(:sort, @search_params[:sort]) unless @search_params[:sort].blank? %>
    <%= hidden_field_tag(:direction, @search_params[:direction]) unless @search_params[:direction].blank? %>

    <!--td></td-->
    <td><%= text_field_tag :name,  @search_params[:name].blank? ? '' : @search_params[:name] %></td>
    <td><%= text_field_tag :item_id,  @search_params[:item_id].blank? ? '' : @search_params[:item_id] %></td>
    <td><%= select_tag :category, options_for_select( (Category.all.map {|cat| [cat.title, cat.id]}) << ['Category',''] , @search_params[:category].blank? ? '' : @search_params[:category]), :include_blank => true %></td>
    <td style="min-width: 100px;">
      <%= text_field_tag(:min_price, @search_params[:min_price].blank? ? '' : @search_params[:min_price], :style => "width: 35px;") -%>
      - 
      <%= text_field_tag(:max_price, @search_params[:max_price].blank? ? '' : @search_params[:max_price], :style => "width: 35px;") -%>
    </td>
    <td><%= select_tag :displayed, options_for_select([['Yes','t'],['No','f']], @search_params[:displayed].blank? ? '' : @search_params[:displayed]), :include_blank => true, :style => "width: 60px;" %></td>
    <td colspan="2"><%= submit_tag 'Apply Filter', :disable_with => 'Searching Items...', :class => "btn small yellow"  %></td>
  </tr>
<% end %>
