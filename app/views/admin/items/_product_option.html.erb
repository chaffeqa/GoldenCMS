<div class="child-field field">
  <label>
    <% if f.object.new_record? %>
      <%= link_to "Remove", 'javascript:void(0)', :class => 'remove-new-child' %>
    <% else %>
      <%= link_to "Remove", 'javascript:void(0)', :class => 'remove-old-child' %>
      <%= f.hidden_field :_destroy, :class => 'destroy-field', :value => '0' %>
    <% end %>
  </label>
  <%= f.text_field :description, :title => 'Description of Option' %> &nbsp;
  <% if f.object.new_record? %>
    <%= f.select :option_item_id, options_for_select( Item.order('name').collect {|item| [item.name, item.id] }, ''), {:prompt => true} %>
  <% else %>
    <%= f.collection_select :option_item_id, Item.all, :id, :title, {:prompt => true}%>
  <% end %>
</div>
