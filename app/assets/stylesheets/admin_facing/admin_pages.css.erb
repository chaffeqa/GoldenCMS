/* GoldenCMS Admin pages */
#mainColumn {
    width: 95%;
    margin: 0 auto;
}


#itemAdminTable {border-bottom: 1px solid #bebfb9;}
#itemAdminTable tr.inputRow td {padding: 0 1em 3em 0;}

#itemAdminTable select,
#itemAdminTable input[type="text"],
#itemAdminTable input[type="range"] {
    background: #fff;
    border: 1px solid #999;
    color: #000;
    font: inherit;
    margin: 2px 1px;
    padding: 2px;
    width: 100%;
}

#itemAdminTable tr.sorters td { padding: 0; }
#itemAdminTable tr.sorters td span,
#itemAdminTable tr.sorters td a { font-weight: bold; background: #E1E2DC; border: 1px solid #bebfb9; padding: 0.5em 0.4em; display: block; }
#itemAdminTable tr.sorters td a.ASC { background: #bebfb9 url(<%= asset_path "arrow-asc.png" %>) 90% .6em no-repeat; }
#itemAdminTable tr.sorters td a.DESC { background: #bebfb9 url(<%= asset_path "arrow-desc.png" %>) 90% .6em no-repeat; }
#itemAdminTable td.sorted {
    background: rgba(230, 230, 250, .7);
    border-left: 1px solid #bebfb9; 
    border-right: 1px solid #bebfb9; 
}

 table.adminTable {}

	/* Thead */
	 table.adminTable thead th { text-align: center; }
	 table.adminTable thead td {}

	/* Tbody */
	 table.adminTable tbody td {padding: .5em .4em;}
	 table.adminTable tbody th {}

	 table.adminTable tbody .alt td {}
	 table.adminTable tbody .alt th {}

	/* Tfoot */
	 table.adminTable tfoot th {}
	 table.adminTable tfoot td {}

#adminPage ul.categoryList { margin: 0 5em 0 0; }
#adminPage ul.categoryList ul { margin: 0 0 0 1em; }
#adminPage ul.categoryList li { clear: both; padding: 1px 0 1px .7em; border-top: 1px solid #f0f0f0;}
#adminPage ul.categoryList li .right { float: right; }

#adminPage td.itemThumb img { vertical-align: middle; }
