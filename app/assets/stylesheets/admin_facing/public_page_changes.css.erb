div.admin section:hover {margin: -37px -6px 29px; padding: 5px 5px 0; border: 1px solid #999;
	box-shadow: 0 1px 3px #999; -moz-box-shadow: 0 1px 3px #999; -webkit-box-shadow: 0 1px 3px #999; }
div.admin section:hover span.controls {display: block;}
div.admin:hover section,
div.admin:hover span.controls {z-index: 999;}
div.admin a.adminEdit {display: inline-block; text-indent: -9999px; width: 16px; height: 16px; background: url(<%= asset_path "edit.png" %>) no-repeat;}


section.admin {display: none;}
section.admin span.controls {display: block; margin-bottom: 0;}

div.admin section.admin {display: block;}
div.admin section.admin:hover {margin: -6px -6px -1px;}

